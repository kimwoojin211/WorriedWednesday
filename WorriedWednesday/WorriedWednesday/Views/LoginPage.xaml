<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:WorriedWednesday.ViewModel"
             Shell.TabBarIsVisible="False"
             x:Class="WorriedWednesday.Views.LoginPage">
  
  <ContentPage.Resources>
    <ResourceDictionary>
      <vm:LoginViewModel x:Key="vm"/>
    </ResourceDictionary>
  </ContentPage.Resources>

  <Grid Margin="16,0"  BindingContext="{StaticResource vm}">
    <StackLayout x:Name="loginStackLayout"
             VerticalOptions="Center"
             IsVisible="True">
      <Entry x:Name="emailEntry"
             Placeholder="Email"
           Keyboard="Email"
           Text="{Binding Email, Mode=TwoWay}"/>
      <Entry x:Name="passwordEntry"
             Placeholder="Password"
           IsPassword="True"
           Text="{Binding Password, Mode=TwoWay}"/>
      <Button Text="Login"
           Command="{Binding LoginCommand}"/>
      <StackLayout Orientation="Horizontal">
        <Label Text="Don't have an account?"/>
        <Label Text="Register">
          <Label.GestureRecognizers>
            <TapGestureRecognizer Tapped="RegisterLabel_Tapped"/>
          </Label.GestureRecognizers>
        </Label>
      </StackLayout>
    </StackLayout>

    <StackLayout x:Name="registerStackLayout"
             VerticalOptions="Center"
             IsVisible="False">
      <Entry Placeholder="Name"
           Text="{Binding Name, Mode=TwoWay}"/>
      <Entry Placeholder="Email"
           Keyboard="Email"
           Text="{Binding Email, Mode=TwoWay}"/>
      <Entry Placeholder="Password"
           IsPassword="True"
           Text="{Binding Password, Mode=TwoWay}"/>
      <Entry Placeholder="Confirm password"
           IsPassword="True"
            Text="{Binding ConfirmPassword, Mode=TwoWay}"/>
      <Button Text="Register"
        Command="{Binding RegisterCommand}"/>
      <StackLayout Orientation="Horizontal">
        <Label Text="Already have an account?"/>
        <Label Text="Login">
          <Label.GestureRecognizers>
            <TapGestureRecognizer Tapped="LoginLabel_Tapped"/>
          </Label.GestureRecognizers>
        </Label>
      </StackLayout>
    </StackLayout>
  </Grid>
</ContentPage>