<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorriedWednesday.Pages.WriteMessagePage"
             xmlns:buttons="clr-namespace:WorriedWednesday.Views.Buttons"
             >
  <StackLayout>
    <StackLayout IsVisible="{Binding IsReply}">
      <Label Text="Worry"/>
      <Label Text="{Binding Worry.Message}"/>
    </StackLayout>

    <StackLayout
             HorizontalOptions="FillAndExpand"
             VerticalOptions="Center">
      <Label Text="Message"/>
      <Entry Text="{Binding Message, Mode=TwoWay}"
             HorizontalOptions="FillAndExpand"
             VerticalOptions="Center"/>
      <buttons:BindableButton BindingContext="{Binding SubmitButtonModel}"
                              HorizontalOptions="Center"
                              WidthRequest="150"
                              VerticalOptions="End"/>
    </StackLayout>
  </StackLayout>
</ContentPage>