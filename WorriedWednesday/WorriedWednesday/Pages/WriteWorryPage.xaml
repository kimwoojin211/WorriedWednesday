<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorriedWednesday.Pages.WriteWorryPage"
             xmlns:buttons="clr-namespace:WorriedWednesday.Views.Buttons"
             >
  <ContentPage.Content>
    <StackLayout>
      <Entry Text="{Binding Message, Mode=TwoWay}"
             VerticalOptions="FillAndExpand"/>
      <buttons:BindableButton BindingContext="{Binding SubmitButtonModel}"
                              HorizontalOptions="Center"
                              WidthRequest="150"
                              VerticalOptions="End"/>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>